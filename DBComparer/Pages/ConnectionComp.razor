<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <label for="dba" class="form-label">Name</label>
            <input type="text" @bind="connection.name" class="form-control" id="dba">
        </div>
        <div class="mb-3">
            <label for="dbb" class="form-label">Connection</label>
            <input type="text" @bind="connection.connection" class="form-control" id="dbb">
        </div>
        <button class="btn btn-danger" @onclick="OnDelete">Delete</button>
    </div>
</div>
<br>
@code {
    [Parameter]
    public Connection connection { get; set; }

    [Parameter] public EventCallback OnDelete { get; set; }

}
